{
  "name": "web-3d-phys-engine",
  "version": "1.0.0",
  "description": "WebGPU-based 3D physics engine with GPU-accelerated computation",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @web-3d-phys-engine/web-client dev",
    "build": "tsc && pnpm --filter @web-3d-phys-engine/web-client build",
    "preview": "pnpm --filter @web-3d-phys-engine/web-client preview",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint packages/*/src --ext ts,tsx --fix"
  },
  "keywords": [
    "webgpu",
    "physics",
    "3d",
    "game-engine",
    "typescript",
    "wgsl"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@webgpu/types": "^0.1.64",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^7.1.3",
    "vitest": "3.2.4",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.3.0",
    "vconsole": "^3.15.1",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1"
  },
  "engines": {
    "node": ">=21.0.0"
  },
  "dependencies": {
    "gl-matrix": "3.4.4",
    "webgpu-utils": "1.11.0",
    "@web-3d-phys-engine/ecs": "workspace:*",
    "@web-3d-phys-engine/renderer": "workspace:*"
  }
}
