{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": false, // use new decorator syntax
    "emitDecoratorMetadata": false, // not needed for new decorators
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ecs": ["packages/ecs/src"],
      "@ecs/*": ["packages/ecs/src/*"],
      "@web-client": ["packages/web-client/src/main.ts"],
      "@web-client/*": ["packages/web-client/src/*"],
      "@renderer": ["packages/renderer/src"],
      "@renderer/*": ["packages/renderer/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@webgpu/types", "./global.d.ts"]
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.d.ts", "global.d.ts"],
  "exclude": ["node_modules", "**/dist"]
}
